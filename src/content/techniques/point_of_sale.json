{
  "code": "FT1303.1",
  "name": "Point of Sale",
  "parent_technique": "Checkout",
  "tactics": ["Monetization"],
  "schemes": [
    "Gift Card Fraud",
    "Account Take Over"
  ],
  "sub_techniques": [],
  "details": [
    {
      "section_header": "Technique Description",
      "section_details": [
        {
          "section_sub_header": "Description",
          "section_info": [
            "The fraudster uses the checkout in-store to convert illicit resources into liquid funds."
          ]
        }
      ]
    },
    {
      "section_header": "Mitigation",
      "section_details": [
        {
          "section_sub_header": "Access Code Required",
          "section_info": [
            "Require an access code that is separate from the gift card before refunding gift card value."
          ]
        },
        {
          "section_sub_header": "Behavior Prevention",
          "section_info": [
            "Identify potentially fraudulent returns and do not refund money if fraud is detected."
          ]
        },
        {
          "section_sub_header": "Restocking Fees",
          "section_info": [
            "Require a fee for potentially fraudulent returns."
          ]
        },
        {
          "section_sub_header": "Delayed Reimbursement",
          "section_info": [
            "Postpone refund by a predetermined amount of time for items that are commonly related to fraud."
          ]
        }
      ]
    },
    {
      "section_header": "Detection",
      "section_details": [
        {
          "section_sub_header": "Transaction data",
          "section_info": [
            "Monitor and record product serial number of items that are commonly related to fraud."
          ]
        },
        {
          "section_sub_header": "Velocity Attributes",
          "section_info": [
            "Monitor returns for total amount and total value of items returned."
          ]
        }
      ]
    }
  ],
